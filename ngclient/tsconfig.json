{
  "compilerOptions": {
    "plugins": [{
      "name": "typescript-tslint-plugin"
    }],
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es2017",
      "dom"
    ],
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "declaration": false,
    "allowJs": true,
    "typeRoots": ["node_modules/@types"]
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "dist"
  ]
}
